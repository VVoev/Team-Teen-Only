@model StupidChessBase.Models.PlayersViewModel

@{
    ViewBag.Title = "Home";
}

<div class="jumbotron">
    <h1>Chess64</h1>
    <p class="lead">Future best chess application</p>
    <p><a href="~/Account/Register" class="btn btn-primary btn-lg">Getting Started &raquo;</a></p>
