@model StupidChessBase.Models.IndexViewModels

@{
    ViewBag.Title = "Home";
}

<div class="jumbotron">
    <h1>Chess64</h1>
    <p class="lead">Future best chess application</p>
    <p><a href="~/Account/Register" class="btn btn-primary btn-lg">Getting Started &raquo;</a></p>
</div>

<div class="row">


    <div class="col-md-4">
        <h2 id="top-10-players-label">Top @if (Model.Players.Count()<10)
        {
            <span>@Model.Players.Count()</span>
        }
        else
        {
            <span>10</span>
        }
        Players</h2>
        <table id="top-10-players-table" class="table table-striped table-bordered table-responsive table-condensed">
            <thead>
                <tr>
                    <th class="col-xs-1">#</th>
                    <th class="col-xs-8">Player</th>
                    <th class="col-xs-1">FED</th>
                    <th class="col-xs-2">ELO</th>
                </tr>
            </thead>
            <tbody>
                @{int counter = 1; }
                @foreach (var player in Model.Players)
                {
                    if (counter > 10)
                    {
                        break;
                    }
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@player.FullName</td>
                        <td><span class="flag-icon flag-icon-@player.CountryCode"></span></td>
                        <td>@player.Rating</td>
                    </tr>
                    counter++;
                }
            </tbody>

        </table>
        <p><a class="btn btn-default" href="../Player/Ranklist">Show more players&raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2 id="current-tournaments-label">Current Tournaments</h2>
        <table id="current-tournaments-table" class="table table-striped table-bordered table-responsive table-condensed">
            <thead>
                <tr>
                    <th class="col-xs-1">#</th>
                    <th class="col-xs-6">Tournament</th>
                    <th class="col-xs-5">Place</th>
                </tr>
            </thead>
            <tbody>
                @{int tournamentCounter = 1;}
                @foreach (var tournament in Model.CurrentTournaments)
                {
                    if (tournamentCounter > 10)
                    {
                        break;
                    }
                    <tr>
                        <th scope="row">@tournamentCounter</th>
                        <td>@tournament.Name</td>
                        <td><span class="flag-icon flag-icon-@tournament.CounrtyCode"></span> @tournament.Counrty</td>
                    </tr>
                    tournamentCounter++;
                }
            </tbody>
        </table>
        <p><a class="btn btn-default" href="../Tournament/Tournaments">Show more tournaments&raquo;</a></p>
    </div>
    <div id="game-of-the-day" class="col-md-4">
        <h2 id="game-of-the-day-label">Game Of The Day</h2>
    </div>
</div>
