@model StupidChessBase.Models.UpcomingPassedTournamentsViewModel

@{
    ViewBag.Title = "Tournaments";
}
@*TODO: Refactor*@

<h1 class="tournament-group-heading">Upcoming Tournaments</h1>

<div class="row">
    @if (Model.UpcomingTournaments.Any())
    {
        <table class="table table-bordered table-striped">
            <tr>
                <th>Name</th>
                <th>Start</th>
                <th>End</th>
                <th>Rounds</th>
                <th>Country</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
            @foreach (var upcomingTournament in Model.UpcomingTournaments)
            {
                <tr>
                    <th>
                        @upcomingTournament.Name
                    </th>
                    <td>
                        @upcomingTournament.StartDate
                    </td>
                    <td>
                        @upcomingTournament.EndDate
                    </td>
                    <td>
                        @upcomingTournament.Rounds
                    </td>
                    <td>
                        @upcomingTournament.Description
                    </td>
                    <td>
                        @upcomingTournament.Description
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditTournament", new { id = upcomingTournament.Id })
                    </td>
                </tr>

            }
        </table>
    }
    else
    {
        <div>No Tournaments</div>
    }
</div>

