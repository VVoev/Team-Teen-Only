@{
    ViewBag.Title = "Tournaments";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <table class="table table-striped table-bordered table-responsive table-condensed">
            <thead>
                <tr>
                    <th class="col-xs-1">#</th>
                    <th class="col-xs-6">Tournament Name</th>
                    <th class="col-xs-2">Date</th>
                    <th class="col-xs-4">Rounds</th>
                </tr>
            </thead>
            @{int counter = 1;}
            @foreach (var tournament in Model.TournamentsData)
            {
                <tbody>
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@tournament.Name</td>
                        <td>@tournament.Date</td>
                        <td>@tournament.Rounds</td>
                    </tr>
                    @{ counter++;}
                </tbody>
                        }
        </table>
    </div>
    @*First param - text, Second param - controller method name;  Third param - Controller name*@
    <button>@Html.ActionLink("AddTournament", "AddTournament", "Tournament")</button>
</body>
</html>
