@{
    ViewBag.Title = "Ranklist";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <table class="table table-striped table-bordered table-responsive table-condensed">
            <thead>
                <tr>
                    <th class="col-xs-1">#</th>
                    <th class="col-xs-8">Player</th>
                    <th class="col-xs-1">Rating</th>
                    <th class="col-xs-2">Country</th>
                </tr>
            </thead>
            <tbody>
                @{int counter = 1;}
                @foreach (var player in Model.PlayersData)
                {
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@player.FullName</td>
                        <td>@player.Rating</td>
                        <td><span class="flag-icon flag-icon-@player.CountryCode"></span> @player.Country</td>
                    </tr>
                    counter++;
                }
            </tbody>
        </table>
    </div>
</body>
</html>
