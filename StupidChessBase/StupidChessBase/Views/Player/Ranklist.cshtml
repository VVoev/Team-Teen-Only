@{
    ViewBag.Title = "Ranklist";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <table class="table table-striped table-bordered table-responsive table-condensed">
            <thead>
                <tr>
                    <th class="col-xs-1">#</th>
                    <th class="col-xs-6">Player</th>
                    <th class="col-xs-1">Rating</th>
                    <th class="col-xs-1">Country</th>
                    <th class="col-xs-1">Wins</th>
                    <th class="col-xs-1">Loses</th>
                    <th class="col-xs-1">Draws</th>
                </tr>
            </thead>
            @{int counter = 1;}
            @foreach (var player in Model.PlayersData)
            {
                <tbody>
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@player.FullName</td>
                        <td>@player.Rating</td>
                        <td>@player.Country</td>
                        <td>@player.Wins</td>
                        <td>@player.Loses</td>
                        <td>@player.Draws</td>
                    </tr>
                    @{ counter++;}
                </tbody>
            }
        </table>
    </div>
</body>
</html>
